<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin">

        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_bold_6"
            android:text="ثبت نام"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutRegister1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/registerName"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="نام"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textInputLayoutRegister2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="نام خانوادگی"
                android:inputType="text"
                android:backgroundTint="@color/colorAccent"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textInputLayoutRegister3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="ایمیل"
                android:backgroundTint="@color/colorAccent"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textInputLayoutRegister4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/registerPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:hint="رمز عبور"
                android:backgroundTint="@color/colorAccent"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textInputLayoutRegister5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/registerRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:hint="تکرار رمز عبور"
                android:backgroundTint="@color/colorAccent"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textInputLayoutRegister6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:counterMaxLength="10"
            app:counterTextColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@color/colorAccent"
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/registerNationalNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="کد ملی"
                android:maxLength="10"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_1"
            android:text="سمت"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerRadioGroup"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/profRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="false"
                android:buttonTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:text="استاد"
                android:fontFamily="@font/iran_sans_1"/>

            <RadioButton
                android:id="@+id/departmentManagerRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:buttonTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:checked="false"
                android:text="مدیرگروه"
                android:fontFamily="@font/iran_sans_1"/>

            <RadioButton
                android:id="@+id/studentRadio"
                android:buttonTint="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="true"
                android:textColor="@color/colorAccent"
                android:text="دانشجو"
                android:fontFamily="@font/iran_sans_1"/>
        </RadioGroup>

        <!--<Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:background="@drawable/login_button_selector"
            android:fontFamily="@font/iran_sans_1"
            android:text="ثبت اطلاعات"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@android:color/white" />-->

        <include layout="@layout/loading_button"
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginHorizontal="@dimen/forms_with_margin" />
    </LinearLayout>

</ScrollView>