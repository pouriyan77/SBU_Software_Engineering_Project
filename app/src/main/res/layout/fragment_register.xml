<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin">

        <TextView
            android:id="@+id/register_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_bold_6"
            android:text="ثبت نام"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:hint="نام"
            android:maxLength="20"
            android:maxLines="1" />

        <EditText
            android:id="@+id/register_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:hint="نام خانوادگی"
            android:maxLines="1" />


        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:hint="ایمیل"
            android:maxLines="1" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:hint="رمز عبور"
            android:maxLines="1" />

        <EditText
            android:id="@+id/register_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:hint="رمز عبور"
            android:maxLines="1" />

        <EditText
            android:id="@+id/register_national_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:hint="کد ملی"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_1"
            android:text="سمت"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/prof_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="false"
                android:text="استاد" />

            <RadioButton
                android:id="@+id/department_manager_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="false"
                android:text="مدیرگروه" />

            <RadioButton
                android:id="@+id/student_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="true"
                android:text="دانشجو" />
        </RadioGroup>

        <Button
            android:id="@+id/save_form_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/iran_sans_1"
            android:text="ثبت اطلاعات"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>