<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:backgroundTint="@color/card_background_dark"
    tools:layout_marginHorizontal="2dp"
    android:layout_marginTop="4dp">

    <TextView
        android:id="@+id/availableTimeTextView"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="شنبه - ساعت 13:00 الی 14:00"
        android:layout_gravity="center"
        style="@style/cardDetailsTextsStyle"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/timeStatusImg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/dot"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="8dp"
        android:tint="@color/successColor"/>

</androidx.cardview.widget.CardView>