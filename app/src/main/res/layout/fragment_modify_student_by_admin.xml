<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin">

        <TextView
            android:id="@+id/modifyStudentByAdminTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_bold_6"
            android:text="ویرایش اطلاعات دانشجویان"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modifyStudentByAdminFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/modifyStudentByAdminFirstNameTextInput"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="نام"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modifyStudentByAdminLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/modifyStudentByAdminLastNameTextInput"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorAccent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="نام خانوادگی"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/modifyStudentByAdminEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/modifyStudentByAdminEmailTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="ایمیل"
                android:backgroundTint="@color/colorAccent"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/modifyStudentByAdminPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/modifyStudentByAdminPasswordTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:hint="رمز عبور"
                android:backgroundTint="@color/colorAccent"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/modifyStudentByAdminCPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/modifyStudentByAdminCPasswordTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:hint="تکرار رمز عبور"
                android:backgroundTint="@color/colorAccent"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/modifyStudentByAdminStudentNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:counterMaxLength="8"
            app:counterTextColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@color/colorAccent"
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/modifyStudentByAdminStudentNumberTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="شماره دانشجویی"
                android:maxLength="8"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/modifyStudentByAdminEntranceYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            app:counterEnabled="true"
            app:counterOverflowTextAppearance="@style/usernameCounterStyle"
            app:counterTextAppearance="@style/usernameCounterStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:counterMaxLength="4"
            app:counterTextColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <com.google.android.material.textfield.TextInputEditText
                android:backgroundTint="@color/colorAccent"
                app:hintTextColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:id="@+id/modifyStudentByAdminEntranceYearTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_1"
                android:gravity="center"
                android:hint="سال ورود"
                android:maxLength="4"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_1"
            android:text="نوع تحصیل"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modifyStudentByAdminEducationTypeRadio"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/modifyStudentByAdminRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="true"
                android:buttonTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:text="روزانه" />

            <RadioButton
                android:id="@+id/modifyStudentByAdminRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:buttonTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:checked="false"
                android:text="شبانه" />

            <RadioButton
                android:id="@+id/modifyStudentByAdminRadio3"
                android:buttonTint="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="false"
                android:textColor="@color/colorAccent"
                android:text="پردیس" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_1"
            android:text="مقطع"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modifyStudentByAdminLevelRadio"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/modifyStudentByAdminRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:checked="true"
                android:buttonTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:text="کارشناسی ارشد" />

            <RadioButton
                android:id="@+id/modifyStudentByAdminRadio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:buttonTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:checked="false"
                android:text="دکتری" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:fontFamily="@font/iran_sans_1"
            android:text="سال ورود"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_font_size" />

        <Button
            android:id="@+id/modifyStudentByAdminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forms_with_margin"
            android:layout_marginTop="@dimen/forms_with_margin"
            android:layout_marginRight="@dimen/forms_with_margin"
            android:background="@drawable/login_button_selector"
            android:fontFamily="@font/iran_sans_1"
            android:text="ثبت تغییرات"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>